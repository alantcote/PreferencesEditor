<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.sf.cotelab.preferenceseditor.PreferencesEditorController">
   <left>
      <TreeView fx:id="prefsTreeView" editable="true" prefHeight="200.0" prefWidth="200.0" showRoot="false" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <Label text="Preferences" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </top>
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button fx:id="propsPaneCancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel" />
                  <Button fx:id="propsPaneApplyButton" mnemonicParsing="false" text="Apply" />
              </buttons>
            </ButtonBar>
         </bottom>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <top>
                  <TextField fx:id="propsPaneNameField" BorderPane.alignment="CENTER" />
               </top>
               <center>
                  <TableView fx:id="prefsPaneTable" editable="true" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="keyColumn" prefWidth="75.0" sortable="false" text="Key" />
                      <TableColumn fx:id="defColumn" prefWidth="75.0" text="Def" />
                    </columns>
                  </TableView>
               </center>
            </BorderPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
